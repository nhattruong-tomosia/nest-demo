{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/firestore-service": [
        "libs/firestore-service/src"
      ],
      "@app/firestore-service/*": [
        "libs/firestore-service/src/*"
      ],
      "@app/constant": [
        "libs/constant/src"
      ],
      "@app/constant/*": [
        "libs/constant/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}